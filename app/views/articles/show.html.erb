<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<h2>Comments(<%= @article.comments.size %>)</h2>
<%= render partial: 'articles/comment', collection: @article.comments %>
<h2>Add a comment:</h2>
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |f| %>
  <p>
    <%= f.label :your_name %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :your_comment %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
    <%= %>
  </p>
<% end %>
<%= link_to '<<Back to Articles List', articles_path %><br />
<%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'} %><br />
<%= link_to 'Edit', edit_article_path %>